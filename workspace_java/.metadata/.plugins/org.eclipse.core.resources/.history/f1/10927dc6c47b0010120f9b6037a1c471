package Quiz;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/lg")
public class Login extends HttpServlet {
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	
		
		String id = request.getParameter("id");
		String pw = request.getParameter("pw");
		request.setCharacterEncoding("utf-8");
		try {
			if(id.equals("admin")&&pw.equals("1234")) {
				request.getRequestDispatcher("/Quiz/logindone.jsp").forward(request, response);
			}else if(id.equals("")||pw.equals("")) {
				request.getRequestDispatcher("/Quiz/loginfail.html").forward(request, response);
			}else {
				request.setAttribute("id", id);
				request.setAttribute("pw", pw);
				request.getRequestDispatcher("/Quiz/nomallogindone.jsp").forward(request, response);
			}
		}catch(Exception e) {
			e.printStackTrace();
				request.getRequestDispatcher("").forward(request, response);
		}
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String name = request.getParameter("name");
		String id = request.getParameter("id");
		String pw = request.getParameter("pw");
		try {
			if(id.equals("")||name.equals("")||pw.equals("")) {
				request.getRequestDispatcher("/Quiz/createid.jsp").include(request, response)
			}
			
			request.setAttribute("id", id);
			request.setAttribute("pw", pw);
			request.setAttribute("name", name);
			request.getRequestDispatcher("/Quiz/login.jsp").forward(request, response);
		}catch(Exception e) {
			e.printStackTrace();
		}
	}

}
